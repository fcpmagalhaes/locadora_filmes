<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<h1 class="page-header"><%=pluralize(@films.size, "Filme", "Filmes")%>
				<small class="novo_filme"><%= link_to 'Novo Filme', new_film_path %></small>
			</h1>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-12">
			<div class="form-group">
			<%= form_tag(films_path, method: :get) do %>
			  <p><%= text_field_tag :search, params[:search],placeholder: 'Busca por título',class: "form-control"%>
			  </p>
			  <p><button type="submit" class="btn btn-primary form-control">Pesquisar</button>
			  	</p>
			<% end %>
			</div>
		</div>
	</div>
	<hr>

	<% @films.each do |film| %>
		<div class="row">
			<div class="col-md-3">
				<%= link_to imagem(film), film , size:'100'%>
			</div>

			<div class="col-md-7">
				<h3><%= link_to film.name, film %></h3>
				<h4>Descrição</h4>
				<p><%=truncate(film.description, length:100, separator: ' ')%></p>
				<h4>Preço</h4>
				<p><%=number_to_currency(film.price)%></p>
			</div>
		</div>
		<hr>
	<%end%>
</div>

